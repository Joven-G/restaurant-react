<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Restaurant.Views.LoginView" BackgroundColor="Gray">
  <ContentPage.Content>
    <StackLayout Orientation="Vertical" VerticalOptions="Center">
      <StackLayout Orientation="Vertical" Padding="10">
        <Entry x:Name="Email" Placeholder="Enter your Email:" HorizontalOptions="FillAndExpand" >
          <Entry.TextColor>
            <OnPlatform x:TypeArguments="Color"
                iOS="Accent"
                WinPhone="Accent"
                Android="#afcca6" />
          </Entry.TextColor>
        </Entry>
      </StackLayout>

      <StackLayout Orientation="Vertical" Padding="10">
        <Entry x:Name="Password" Placeholder="Enter password" HorizontalOptions="FillAndExpand" IsPassword="true">
          <Entry.TextColor>
            <OnPlatform x:TypeArguments="Color"
                iOS="Accent"
                WinPhone="Accent"
                Android="#afcca6" />
          </Entry.TextColor>
        </Entry>
      </StackLayout>

      <StackLayout Orientation="Horizontal" Padding="10" HorizontalOptions="Center">
        <Button x:Name="Login" Text="Login" WidthRequest="150"/>
        <Button x:Name="OpenRegester" Text="Regester" WidthRequest="150"/>
      </StackLayout>

    </StackLayout>
  </ContentPage.Content>
</ContentPage>