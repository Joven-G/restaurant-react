<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Restaurant.Views.LoginView">
  <ContentPage.Content>
    <StackLayout Orientation="Vertical">
      <StackLayout Orientation="Vertical">
        <Label Text="Enter your Email Address to Log In:" />
        <Entry x:Name="Email" HorizontalOptions="FillAndExpand" />
      </StackLayout>

      <StackLayout Orientation="Vertical" Padding="0,16,0,0">
        <Label Text="Enter password"/>
        <Entry x:Name="Password" HorizontalOptions="FillAndExpand" IsPassword="true"/>
      </StackLayout>

      <Button x:Name="Login" Text="Login" Command="{Binding Login}"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>